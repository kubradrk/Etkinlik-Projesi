<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/constrainarkaplan"
    tools:context=".EtkinlikDetayFragment">

    <TextView
        android:id="@+id/detayKatil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="255dp"
        android:drawableLeft="@drawable/katilbuton"
        android:text=" Etkinliğe Katıl "
        android:textColor="@color/textColor"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detayFavEkle" />

    <TextView
        android:id="@+id/yorumlariGoruntuleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:drawableLeft="@drawable/yorumlar"
        android:text=" Etkinlik yorumlarını görüntüle "
        android:textColor="@color/textColor"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detayKatil" />

    <TextView
        android:id="@+id/metinText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:text="Seçilen Etkinlik Bilgileri"
        android:textColor="@color/textColor"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/detayCardView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/detayCardView"
        android:layout_width="379dp"
        android:layout_height="323dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/metinText">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="334dp"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/baslıkkText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Etkinlik:"
                android:textColor="@color/buttonColor"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/baslikTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Etkinlik Adı"
                android:textColor="@color/buttonColor"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tarihText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tarih:"
                android:textColor="@color/buttonColor"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tarihTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Tarih Bilgisi"
                android:textColor="@color/buttonColor"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/konumText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Konum:"
                android:textColor="@color/buttonColor"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/yerTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Konum Bilgisi"
                android:textColor="@color/buttonColor"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/kategoriText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kategori:"
                android:textColor="@color/buttonColor"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/kategoriTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Kategori Bilgisi"
                android:textColor="@color/buttonColor"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/acıklamaText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Açıklama:"
                android:textColor="@color/buttonColor"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/aciklamaTextWiew"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Açıklama bilgisi"
                android:textColor="@color/buttonColor"
                android:textSize="14sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/detayFavEkle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:drawableLeft="@drawable/favoriekle"
        android:text=" Etkinliği Favorilerime Ekle "
        android:textColor="@color/textColor"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detayCardView" />
    <!-- PUANLAMA ve YORUM BÖLÜMÜ -->
    <LinearLayout
        android:id="@+id/yorumLayout"
        android:layout_width="400dp"
        android:layout_height="186dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/yorumlariGoruntuleButton">

        <!-- Kullanıcı Puanlama İçin RatingBar -->

        <!-- Kullanıcı Yorumları İçin EditText -->

        <!-- Yorum Ekle Butonu -->

        <RatingBar
            android:id="@+id/puanRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:numStars="5"
            android:rating="0"
            android:stepSize="1.0" />

        <EditText
            android:id="@+id/yorumEditText"
            android:layout_width="366dp"
            android:layout_height="55dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/edittextarkaplan"
            android:gravity="top"
            android:hint="Yorumunuzu buraya yazın"
            android:inputType="textMultiLine"
            android:lines="3"
            android:padding="8dp" />

        <Button
            android:id="@+id/yorumEkleButton"
            android:layout_width="364dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:text="Yorum Yap"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="left"
        app:constraint_referenced_ids="yorumlariGoruntuleButton" />

</androidx.constraintlayout.widget.ConstraintLayout>

